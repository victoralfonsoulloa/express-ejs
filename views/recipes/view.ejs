<%- include('../partials/header', { title: recipe.name }) %>
<div class="card">
  <div class="card-body" style="position:relative">
    <h4 class="card-title"><%= recipe.name %></h4>
    <p class="card-text w-75"><strong>Author:</strong> <%= recipe.author %></p>
    <p class="card-text w-75"><strong>Category:</strong> <%= recipe.category?.name || 'N/A' %></p>
    <p class="card-text w-75"><strong>Description:</strong> <%= recipe.description %></p>
    <p class="card-text w-75"><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
    <p class="card-text w-75"><strong>Instructions:</strong> <%= recipe.instructions %></p>
    <p class="card-text w-75"><strong>Rating:</strong> <%= recipe.rating %></p>
    <% let imgName = recipe.name.toLowerCase().replace(/\s+/g, '-'); %>
    <div style="position:absolute;right: 10px;top: 10px;"><img style="max-height:300px" src="/images/recipes/<%= recipe._id %>.jpg" alt="<%= recipe.name %>"class="img-fluid mt-3"></div>
    <a href="/recipes/edit/<%= recipe._id %>" class="btn btn-warning">Edit</a>
    <a href="/recipes/upload-pic/<%= recipe._id %>" class="btn btn-info">Upload Pic</a>
    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to permanently delete this recipe?');" class="d-inline">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a href="/recipes" class="card-link">Back</a>
  </div>
</div>
<%- include('../partials/footer') %>
